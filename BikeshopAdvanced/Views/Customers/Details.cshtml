@model BikeshopAdvanced.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        @foreach (var bags in Model.ShoppingBags)
        {
            @foreach (var items in bags.ShoppingItems)
            {
                <dt class="col-sm-2">
                    @Html.DisplayFor(client => items.Product.Name)
                </dt>
                <dd class="col-sm-4">
                    @Html.DisplayFor(client => items.Product.Price) €
                </dd>
                <dd class="col-sm-5">
                    aantal: @Html.DisplayFor(client => items.Quentity)
                </dd>
            }
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
